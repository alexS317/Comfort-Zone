        <item name="colorPrimary">@color/deep_purple_400</item>
        <item name="colorPrimaryVariant">@color/deep_purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/deep_purple_200</item>
        <item name="colorSecondaryVariant">@color/deep_purple_300</item>
